<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.text.Text?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.example.cab302_project.ShoppingListController">

    <!-- VBox to hold the title and shopping list, centered -->
    <VBox alignment="CENTER" spacing="20.0" AnchorPane.topAnchor="0" AnchorPane.leftAnchor="0"
          AnchorPane.rightAnchor="0" AnchorPane.bottomAnchor="50.0">
        <!-- Title -->
        <Label text="Shopping List" styleClass="title-label" style="-fx-font-size: 20; -fx-text-fill: white;"/>

        <!-- List of shopping items, centered -->
        <GridPane hgap="1" vgap="1" alignment="CENTER">
            <Label text="•" style="-fx-text-fill: white; -fx-font-size: 16;" GridPane.rowIndex="0"
                   GridPane.columnIndex="0"/>
            <Label text="Eggs" style="-fx-text-fill: white; -fx-font-size: 16;" GridPane.rowIndex="0"
                   GridPane.columnIndex="1"/>

            <Label text="•" style="-fx-text-fill: white; -fx-font-size: 16;" GridPane.rowIndex="1"
                   GridPane.columnIndex="0"/>
            <Label text="Broccoli" style="-fx-text-fill: white; -fx-font-size: 16;" GridPane.rowIndex="1"
                   GridPane.columnIndex="1"/>

            <Label text="•" style="-fx-text-fill: white; -fx-font-size: 16;" GridPane.rowIndex="2"
                   GridPane.columnIndex="0"/>
            <Label text="Mushroom" style="-fx-text-fill: white; -fx-font-size: 16;" GridPane.rowIndex="2"
                   GridPane.columnIndex="1"/>

            <Label text="•" style="-fx-text-fill: white; -fx-font-size: 16;" GridPane.rowIndex="3"
                   GridPane.columnIndex="0"/>
            <Label text="Butter" style="-fx-text-fill: white; -fx-font-size: 16;" GridPane.rowIndex="3"
                   GridPane.columnIndex="1"/>
        </GridPane>
    </VBox>

    <!-- Back button in the bottom-left corner -->
    <Button fx:id="backButton"
            text="Back"
            style="-fx-background-color: #3a78f0; -fx-text-fill: white; -fx-font-size: 14; -fx-font-weight: bold;  "
            prefWidth="80"
            prefHeight="30"
            AnchorPane.bottomAnchor="15.0"
            AnchorPane.leftAnchor="15.0"
            onAction="#backButton"/>
</AnchorPane>
