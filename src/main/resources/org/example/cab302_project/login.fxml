<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="org.example.cab302_project.LoginController" styleClass="root">
    <VBox alignment="CENTER" spacing="20" styleClass="root" AnchorPane.topAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0">
        <!-- Title -->
        <Label text="Ingredient Tracker" styleClass="title-label"
               style="-fx-font-size: 24px; -fx-font-weight: bold;"/>

        <!-- Username field -->
        <HBox alignment="CENTER" >
            <Label text="Username:" prefWidth="80"/>
            <TextField fx:id="usernameField" prefWidth="200"/>
        </HBox>

        <!-- Password field -->
        <HBox alignment="CENTER" >
            <Label text="Password:" prefWidth="80"/>
            <PasswordField fx:id="passwordField" prefWidth="200"/>
        </HBox>

        <!-- Message label -->
        <Label fx:id="messageLabel" wrapText="true" maxWidth="300" textAlignment="CENTER" style="-fx-padding: 0 0 0 0;"/>
    </VBox>

    <!-- Buttons at the bottom -->
    <HBox alignment="CENTER" spacing="20" AnchorPane.bottomAnchor="10.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
        <Button text="Login" onAction="#handleLogin" prefWidth="100" styleClass="new-recipe-button"/>
        <Button text="Register" onAction="#handleRegister" prefWidth="100" styleClass="edit-button"/>
    </HBox>
</AnchorPane>